<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StackLayout.StackLayout2">
    
    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness" Android="0, 20, 0, 0">
        </OnPlatform>
    </ContentPage.Padding>
    <StackLayout>
        
        <StackLayout Padding="10">
            <Label Text="nyc_photographer" FontAttributes="Bold" TextColor="Black"/>
            
        </StackLayout>
        <Image Source="http://lorempixel.com/1920/1080/nature/3/" />
        <StackLayout Orientation="Horizontal" Spacing="20" Padding="10, 0">
            <Button Text="Like" TextColor="DodgerBlue" />
            <Button Text="Comment" TextColor="DodgerBlue"/>
            <Button Text="Share" TextColor="DodgerBlue" />
        </StackLayout>
        
        <StackLayout Padding="10">
            <BoxView HeightRequest="1" Color="#f0f0f0" />
            <Label Text="700 likes" FontAttributes="Bold" TextColor="Black" />
            <Label TextColor="Black" Text="This is a shot yesterday in Skanor, Sweden,
                   when driving home, from a couple of days of work in Denmark." />
            
        </StackLayout>
    </StackLayout>
</ContentPage>